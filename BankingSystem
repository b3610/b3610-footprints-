#define _CRT_SECURE_NO_WARNINGS
#include <iostream>
#include <cstring>
using namespace std;
const int NAME_LEN = 20;

void ShowMenu(void); //메뉴출력
void MakeAccount(void);//계좌개설을 위한 함수

class Account
{
private:
	int accID;//계좌번호
	int balance;//잔 액
	char *cusName;//고객이름

public:
	Account(int ID, int money, char *name)
		:accID(ID), balance(money)
	{
		cusName = new char[strlen(name + 1)];
		strcpy(cusName, name);
	}
	int GetaccID()
	{
		return accID;
	}
	

void DepositMoney(void);//입 금
void WithdrawMoney(void);//출 금
void ShowAllAccInfo(void);//잔액조회
};
Account *AccID[100];
int Accnum = 0;

int main(void)
{
	while (1)
	{
		ShowMenu();
	}

}

void ShowMenu(void)
{
	int choice;
	cout <<" ------Menu------" << endl;
	cout << "1. 계좌계설" << endl;
	cout << "2. 입 금" << endl;
	cout << "3. 출 금" << endl;
	cout << "4. 계좌정보 전체 출력" << endl;
	cout << "5. 프로그램 종료" << endl;
	cout << "선택: ";
	cin >> choice;
	switch (choice)
	{
	case 1:
		MakeAccount();
		break;
	case 2:
		//AccountDepositMoney();
		break;
	case 3:
		Account WithdrawMoney();
		break;
	default:
		break;
	}
}
void MakeAccount(void)
{
	int ID, money;
	char name[NAME_LEN];
	cout << "[계좌계설]" << endl;
	cout << "계좌ID: ";
	cin >> ID;
	cout << endl << "이 름:";
	cin >> name;
	cout << endl << "입금액: ";
	cin >> money;
	AccID[Accnum]=new Account(ID, money, name);
	Accnum++;
}
