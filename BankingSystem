#define _CRT_SECURE_NO_WARNINGS
//made by jci
#include <iostream>
#include <cstring>
using namespace std;
const int NAME_LEN = 20;

int ShowMenu(void); //메뉴출력
void MakeAccount(void);//계좌개설을 위한 함수
void DepositMoney(void);//입 금
void WithdrawMoney(void);//출 금
void ShowAllAccInfo(void);//전체조회

int article_len = 0;
int* article = new int(article_len);

class Account
{
private:
	int accID;//계좌번호
	int balance;//잔 액
	char* cusName;//고객이름

public:
	Account(int ID, int money, char* name)
		:accID(ID), balance(money)
	{
		cusName = new char[strlen(name + 1)];
		strcpy(cusName, name);
	}
	void AcountDepositMoney(int money)
	{
		balance += money;
		cout << "입금완료" << endl;
	}

	void AcountWithdrawMoney(int money)
	{
		balance -= money;
		cout << "출금완료" << endl;
	}
	void AcountShowAllnfo()
	{
		cout << endl << "계좌번호" << accID << endl;
		cout << "이 름" << cusName << endl;
		cout << "잔 액" << balance << endl;
	}

	int GetaccID()
	{
		return accID;
	}
};

Account* AccID[100];
int Accnum = 0;

int main(void)
{
	cout << "made by jci" << endl;
	ShowMenu();
}

int ShowMenu(void)
{
	while (1)
	{
		int choice;
		cout << endl << " ------Menu------" << endl;
		cout << "1. 계좌계설" << endl;
		cout << "2. 입 금" << endl;
		cout << "3. 출 금" << endl;
		cout << "4. 계좌정보 전체 출력" << endl;
		cout << "5. 프로그램 종료" << endl;
		cout << "선택: ";
		cin >> choice;
		switch (choice)
		{
		case 1:
			MakeAccount();
			break;
		case 2:
			DepositMoney();
			break;
		case 3:
			WithdrawMoney();
			break;
		case 4:
			ShowAllAccInfo();
			break;
		case 5:
			return 0;
		default:
			break;
		}

	}
}
void MakeAccount(void)
{
	int ID, money;
	char name[NAME_LEN];
	cout << "[계좌계설]" << endl;
	cout << "계좌ID: ";
	cin >> ID;
	if (Accnum != 0)
	{
		for (int i = 0; i < Accnum; i++)
		{
			if (AccID[i]->GetaccID() == ID)
			{
				cout << "중복되는 아이디입니다" << endl;
				ShowMenu();
				continue;
			}
		}
	}
		cout << "이 름:";
	cin >> name;
	cout << "입금액: ";
	cin >> money;
	AccID[Accnum] = new Account(ID, money, name);
	Accnum++;

}
void DepositMoney(void)
{
	int ID, money, i;
	cout << endl << "계좌ID:";
	cin >> ID;
	for (i = 0; i < Accnum; i++)
	{
		if (AccID[i]->GetaccID() == ID)
		{
			cout << "입금액: ";
			cin >> money;
			AccID[i]->AcountDepositMoney(money);
			break;
		}
	}
	if (i == Accnum)
	{
		cout << "잘못되 아이디 입니다" << endl;
	}
}
void WithdrawMoney(void)//출 금
{
	int ID, money, i;
	cout << endl << "계좌ID:";
	cin >> ID;
	for (i = 0; i < Accnum; i++)
	{
		if (AccID[i]->GetaccID() == ID)
		{
			cout << "출금액: ";
			cin >> money;
			AccID[i]->AcountWithdrawMoney(money);
			break;
		}
	}
	if (i == Accnum)
	{
		cout << "잘못되 아이디 입니다" << endl;
	}
}

void ShowAllAccInfo()
{
	for (int i = 0; i < Accnum; i++)
	{
		AccID[i]->AcountShowAllnfo();
	}
}
